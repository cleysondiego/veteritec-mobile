<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_add_customer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.AddCustomerActivity"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4sp"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="#FFFFFF" />

        <ScrollView
            android:id="@+id/addCustomer_form"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_marginBottom="4sp"
            app:layout_constraintBottom_toTopOf="@+id/btnAddCustomerSave"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtAddCustomerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:text="@string/txtAddCustomerName"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edtAddCustomerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:autofillHints="@string/edtAddCustomerName"
                    android:ems="10"
                    android:hint="@string/edtAddCustomerName"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/txtAddCustomerCPF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:text="@string/txtAddCustomerCPF"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edtAddCustomerCPF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:autofillHints="@string/edtAddCustomerCPF"
                    android:ems="10"
                    android:hint="@string/edtAddCustomerCPF"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/txtAddCustomerCEP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:text="@string/txtAddCustomerCEP"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edtAddCustomerCEP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:autofillHints="@string/edtAddCustomerCEP"
                    android:ems="10"
                    android:hint="@string/edtAddCustomerCEP"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/txtAddCustomerNeighborhood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:text="@string/txtAddCustomerNeighborhood"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edtAddCustomerNeighborhood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:autofillHints="@string/edtAddCustomerStreet"
                    android:ems="10"
                    android:hint="@string/edtAddCustomerNeighborhood"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/txtAddCustomerStreet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:text="@string/txtAddCustomerStreet"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edtAddCustomerStreet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:autofillHints="@string/edtAddCustomerStreet"
                    android:ems="10"
                    android:hint="@string/edtAddCustomerStreet"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/txtAddCustomerNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:text="@string/txtAddCustomerNumber"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edtAddCustomerNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:autofillHints="@string/edtAddCustomerNumber"
                    android:ems="10"
                    android:hint="@string/edtAddCustomerNumber"
                    android:inputType="text"
                    tools:ignore="TextFields" />

                <TextView
                    android:id="@+id/txtAddCustomerTelephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:text="@string/txtAddCustomerTelephone"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edtAddCustomerTelephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:autofillHints="@string/edtAddCustomerTelephone"
                    android:ems="10"
                    android:hint="@string/edtAddCustomerTelephone"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/txtAddCustomerCellphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:text="@string/txtAddCustomerCellphone"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edtAddCustomerCellphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:autofillHints="@string/edtAddCustomerCellphone"
                    android:ems="10"
                    android:hint="@string/edtAddCustomerCellphone"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/txtAddCustomerEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:text="@string/txtAddCustomerEmail"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edtAddCustomerEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="16sp"
                    android:autofillHints="@string/edtAddCustomerEmail"
                    android:ems="10"
                    android:hint="@string/edtAddCustomerEmail"
                    android:inputType="textEmailAddress" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnAddCustomerSave"
            android:layout_width="64sp"
            android:layout_height="64sp"
            android:layout_gravity="end"
            android:layout_marginTop="4sp"
            android:layout_marginEnd="16sp"
            android:layout_marginBottom="16sp"
            android:background="@drawable/ic_save_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addCustomer_form" />

        <Button
            android:id="@+id/btnAddCustomerEdit"
            android:layout_width="64sp"
            android:layout_height="64sp"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_edit_24"
            android:onClick="onClick"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/btnAddCustomerSave"
            app:layout_constraintEnd_toStartOf="@+id/btnAddCustomerSave"
            app:layout_constraintTop_toTopOf="@+id/btnAddCustomerSave" />

        <Button
            android:id="@+id/btnAddCustomerDelete"
            android:layout_width="64sp"
            android:layout_height="64sp"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_delete_24"
            android:onClick="onClick"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/btnAddCustomerEdit"
            app:layout_constraintEnd_toStartOf="@+id/btnAddCustomerEdit"
            app:layout_constraintTop_toTopOf="@+id/btnAddCustomerEdit" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>